@using TimeSheets.Core.Model
@using TimeSheets.Web.CustomHtmlHelpers
@model TimeSheets.Web.ViewModels.StaffShiftVM.StaffShiftEditViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="col-md-6">
        @using (Html.BeginForm("Edit", "StaffShift", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
    
            <fieldset>
                <legend>StaffShift</legend>
                @Html.HiddenFor(m => m.TimesOverride.StaffShiftId)
                @Html.ValidationMessageFor(m => m.TimesOverride.StaffShiftId)

                <div class="form-group">
                    @Html.LabelFor(m => m.TimesOverride.OPaidStartTime)
                    @Html.DateTimeFor(m => m.TimesOverride.OPaidStartTime)
                    @Html.ValidationMessageFor(m => m.TimesOverride.OPaidStartTime)
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.TimesOverride.OPaidFinishTime)
                    @Html.DateTimeFor(m => m.TimesOverride.OPaidFinishTime)
                    @Html.ValidationMessageFor(m => m.TimesOverride.OPaidFinishTime)
                </div>






                <p>
                    <input type="submit" value="Save" class="btn btn-success btn-sm" />
                    @Html.ActionLink("Back to List", "Index", "Shift", null, new { @class = "btn btn-info btn-sm" })

                </p>
            </fieldset>
        }
        @if (Model.StaffShift.UseOverrideTimes)
        {
            using (Html.BeginForm("RemOTimes", "StaffShift",FormMethod.Post ,new { @class = "form-horizontal" }))
            {
                @Html.HiddenFor(m => m.TimesOverride.StaffShiftId)
                //@Html.HiddenFor(m => m.TimesOverride.OPaidFinishTime)
                //@Html.HiddenFor(m => m.TimesOverride.OPaidFinishTime)
                
                <input type="submit" value="Clear and Use Scans" class="btn btn-danger btn-sm" />
            }
        }

    </div>
</div>
@section Scripts {

}
